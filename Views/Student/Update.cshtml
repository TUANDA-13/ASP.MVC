@model List<Class>;
@{
    ViewData["Title"] = "Student Create Page";
    var student = ViewBag.Student;
    var classes = Model;
    
}

<form action="/Student/Save" method="post">
<div class="form-group d-none">
        <label for="Id">Id</label>
        <input type="text" class="form-control" id="Id" name="Id" value="@student.Id">
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="name" name="Name" value="@student.Name">
    </div>

       @* <div class="form-group">
    <label for="Gender">Gender</label>
    <input type="number" class="form-control" id="gender" name="Gender" value="@student.Gender">
    </div> *@
    @if(student.Gender == true)
    {
        <div class="form-check">
            <input type="radio" class="form-check-input" id="radio1" name="Gender" value="True" checked>Male
            <label class="form-check-label" for="radio1"></label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="radio2" name="Gender" value="False">Female
            <label class="form-check-label" for="radio2"></label>
        </div>
    }
    else
    {
        <div class="form-check">
            <input type="radio" class="form-check-input" id="radio1" name="Gender" value="True" >Male
            <label class="form-check-label" for="radio1"></label>
        </div>
        <div class="form-check">
            <input type="radio" class="form-check-input" id="radio2" name="Gender" value="False" checked>Female
            <label class="form-check-label" for="radio2"></label>
        </div>
    }

    <div class="form-group">
        <label for="Price">DOB</label>
        <input type="date" class="form-control" id="dob" name="DOB" value="@student.DOB.Date.ToString("yyyy-MM-dd")">
    </div>


    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="address" name="Address"value="@student.Address">
    </div>



    <div class="form-group">
        <label for="ClassId">Class</label>
        <select class="form-control" id="ClassId" name="ClassId">
            @foreach (var c in classes)
            {
                if (student.ClassId == c.Id)
                {
                        <option value="@c.Id" selected>
                        @c.Name
                        </option>
                }
                else
                {
                    <option value="@c.Id">
                        @c.Name
                    </option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>